<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        <li class="active">Trang chủ quản trị </li>
        <li class=""> / Category</li>
        <li class=""> / Edit Category</li>
    </ol>
</div>

<div class="row page-header">
    <div class="col-sm-12">
        <h1>Edit Category</h1> 
    </div>
</div>
<div class="row add_user">
    <div class="col-6">
        <%if(message.length > 0) {%>
            <%if(message === 'empty'){%>
                <div class="alert alert-danger">Không được để trống thông tin !</div>
            <%}else if(message === 'wrong'){%>	
                <div class="alert alert-danger">Category đã tồn tại !</div>
            <%}else if(message === 'accept'){%>	
                <div class="alert alert-success">Sửa category thành công !</div>
            <%}%>
        <%}%>
        <form role="form" method="POST" action="/admin/edit_category/<%= cat_ID%>">
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="Tên category" name="cat_name" type="text" autofocus value="<%= cur_cat[0].cat_name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Mô tả" name="cat_des" type="text" value="<%= cur_cat[0].cat_des%>">
                </div>
                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Save</button>
            </fieldset>
        </form>
    </div>
    
      
</div>