                <% include sub_admin%>
            <%}else if(page === 'user'){%>	
                <% include user%>
            <%}else if(page === 'add_user'){%>	
                <% include add_user%>
            <%}else if(page === 'category'){%>	
                <% include admin_category%>
            <%}else if(page === 'add_category'){%>	
                <% include add_category%>
            <%}else if(page === 'articles'){%>	
                <% include admin_articles%>
            <%}else if(page === 'add_article'){%>	
                <% include add_article%>
            <%}else if(page === 'chapters'){%>	
                <% include admin_chapter%>
            <%}else if(page === 'add_chapter'){%>	
                <% include add_chapter%>
            <%}else if(page === 'edit_user'){%>	
                <% include edit_user%>
            <%}else if(page === 'edit_category'){%>	
                <% include edit_category%>
            <%}else if(page === 'edit_article'){%>	
                <% include edit_article%>
            <%}else if(page === 'edit_chapter'){%>	
                <% include edit_chapter%>
